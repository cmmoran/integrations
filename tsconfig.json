{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
